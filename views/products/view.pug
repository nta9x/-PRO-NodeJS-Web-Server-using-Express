extends ../layouts/_layoutPage
block content
    h2 View Product
    .container.p-5
        .row.d-lex.align-items-center
            .col-sm-3.text-center
                img.rounded.border.border-primary( src=''+products.image+'250', width='250', height='220', alt='')
                
            .col-sm
                label.form-control
                    b ID: 
                    span=products.id
                label.form-control
                    b Name: 
                    span=products.name
                label.form-control
                    b Image: 
                    span=products.image
                label.form-control
                    b Description: 
                    span=products.description
                a.btn.btn-primary.mr-2(href= '/products') products list
                a.btn.btn-success.mr-2(href= '/products/edit/'+ products.id) edit
                a.btn.btn-secondary(href= '/products/delete/'+ products.id) delete            

